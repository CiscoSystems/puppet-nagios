PATH=/bin:/sbin:/usr/bin:/usr/sbin:/usr/local/bin:/usr/local/sbin

PROGNAME=`basename $0`
REVISION="1.0"

STATE_OK=0
STATE_WARNING=1
STATE_CRITICAL=2
STATE_UNKNOWN=3
STATE_DEPENDENT=4


print_usage() {
    echo "Usage: $PROGNAME"
}

print_help() {
    print_usage
    echo "This plugin checks Swift status using the swift-recon program."
    exit 0
}

case "$1" in
    --help|-h)
	print_help
	exit 0
	;;
esac

if ! which swift-recon >/dev/null 2>&1
then
    echo "swift-recon command not found"
    exit $STATE_UNKNOWN
fi

CHECK=$(swift-recon --objmd5 | grep ' error')
echo $CHECK

if echo "$CHECK" | grep -q ' 0 error'
then
    exit $STATE_OK
elif echo "$CHECK" | grep -q ' 1 error'
then
    exit $STATE_WARNING
else
    exit $STATE_CRITICAL
fi
